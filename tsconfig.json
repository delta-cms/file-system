{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@": ["src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*",
    "node_modules/chai-fs/**/*"
  ]
}